<%= form_with model: @post do |f| %>
  <div class="mb-4">
    <%= f.text_area :content,
        rows: 5,
        placeholder: "What's on your mind?",
        class: "w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.file_field :media,
        multiple: true,
        accept: "image/*,video/*",
        class: "block w-full" %>
  </div>

  <%= f.submit "Post",
      class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>