<h1 class="text-2xl font-bold mb-4">Edit Profile</h1>

<%= form_with model: @user, url: "/profile/update", method: :patch do |f| %>

  <div class="mb-4">
    <%= f.label :username %>
    <%= f.text_field :username, class: "border p-2 rounded w-full" %>
  </div>

  <%= f.submit "Save",
               class: "bg-blue-600 text-white px-4 py-2 rounded" %>

<% end %>
