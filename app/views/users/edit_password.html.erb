<h1 class="text-2xl font-bold mb-4">Change Password</h1>

<%= form_with url: update_password_path, method: :patch do |f| %>

  <div class="mb-4">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, class: "border p-2 rounded w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "New Password" %>
    <%= f.password_field :password, class: "border p-2 rounded w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, "Confirm New Password" %>
    <%= f.password_field :password_confirmation, class: "border p-2 rounded w-full", required: true %>
  </div>

  <%= f.submit "Update Password",
               class: "bg-blue-600 text-white px-4 py-2 rounded" %>

<% end %>
