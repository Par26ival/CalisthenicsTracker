<h1 class="text-3xl font-bold mb-8 text-center">Friends</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">

  <!-- FRIENDS -->
  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Friends</h2>

    <% if @friends.any? %>
      <ul class="space-y-2">
        <% @friends.each do |friend| %>
          <li class="p-2 bg-gray-100 rounded">
            <strong><%= friend.username %></strong>
            <div class="text-sm text-gray-600"><%= friend.email %></div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No friends yet.</p>
    <% end %>
  </div>

  <!-- SENT INVITATIONS -->
  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Sent Requests</h2>

    <% if @sent_requests.any? %>
      <ul class="space-y-2">
        <% @sent_requests.each do |req| %>
          <li class="p-2 bg-gray-100 rounded">
            <strong><%= req.receiver.username %></strong>
            <span class="text-sm text-gray-500">(pending)</span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No outgoing requests.</p>
    <% end %>
  </div>

  <!-- RECEIVED INVITATIONS -->
  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Incoming Requests</h2>

    <% if @received_requests.any? %>
      <% @received_requests.each do |req| %>
        <div class="p-3 bg-gray-100 rounded mb-3 flex justify-between items-center">
          <div>
            <strong><%= req.requester.username %></strong>
          </div>

          <div class="flex gap-2">
            <%= button_to "✓",
                          accept_friendship_path(req),
                          method: :patch,
                          class: "bg-green-600 text-white px-3 py-1 rounded" %>

            <%= button_to "✕",
                          decline_friendship_path(req),
                          method: :delete,
                          class: "bg-red-600 text-white px-3 py-1 rounded" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500">No incoming requests.</p>
    <% end %>
  </div>

</div>
